---
layout: base.njk
mainClass: post-page
---

<article class="post">
    <header class="post-header">
        <h1>{{ title }}</h1>
        <div class="post-meta">
            {% if created %}
            <span>Created: {{ created | readableDate }}</span>
            {% endif %}
            {% if updated %}
            <span>Updated: {{ updated | readableDate }}</span>
            {% endif %}
        </div>
    </header>

    <div class="post-content">
        {{ content | safe }}
    </div>

    <footer class="post-footer">
        <a href="/posts/">&larr; Back to all posts</a>
    </footer>
</article>
